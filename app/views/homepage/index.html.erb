            <%= image_tag(
              vite_asset_path("icons/arrow-up-right.svg"),
              width: "30",
              height: "30",
              loading: "eager",
              decoding: "sync",
              fetchpriority: "high",
              class: "hp-proj-svg",
              alt: "An arrow pointing up and right",
            ) %>
          </div>
          <div class="hp-proj-desc"><%= proj[:description] %></div>
